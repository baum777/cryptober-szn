{
  "name": "cryptober-szn",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "audit:sitemap": "node tools/audit-sitemap.js",
    "i18n:scan": "node tools/i18n-scan.js",
    "images:optimize": "node scripts/optimize-images.js",
    "svg:optimize": "svgo -f assets -r --config=svgo.config.js",
    "css:minify": "postcss src/css/style.css -o dist/css/style.min.css",
    "js:minify": "terser src/js/app.js -c -m -o dist/js/app.min.js --source-map \"url='app.min.js.map'\"",
    "assets:build": "npm run images:optimize && npm run svg:optimize && npm run css:minify && npm run js:minify",
    "dev": "npm run css:minify -- --watch",
    "lighthouse": "lighthouse http://localhost:8000 --view --preset=desktop"
  },
  "devDependencies": {
    "@squoosh/cli": "^0.7.3",
    "cssnano": "^6.0.1",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "svgo": "^3.0.2",
    "terser": "^5.24.0",
    "rimraf": "^5.0.5"
  }
}
